<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/pager_imageView"
        android:layout_width="80dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:padding="5dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pager_imageView"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/coookie1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:maxLines="1">

    </androidx.appcompat.widget.AppCompatTextView>

    <TextView
        android:id="@+id/textView_pager2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_pager"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="#433F3F">

    </TextView>
</LinearLayout>