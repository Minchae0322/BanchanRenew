<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_infridgeAmount"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:fontFamily="@font/merona2"
        android:layout_gravity="center_horizontal"
        android:textColor="#433F3F"
        android:textAlignment="center"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/iv_infridge"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/tv_infridgeName"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/merona"
        android:textAlignment="center"
        android:textColor="#000000"
        android:autoSizeMinTextSize="7sp"
        android:ellipsize="end"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="10sp" />

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tv_infridgeUnit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/merona2"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#433F3F"
            android:autoSizeMinTextSize="6sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="9sp"  />


    </LinearLayout>


</LinearLayout>