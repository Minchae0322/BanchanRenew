<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dialog_recipe_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="step 1"
        android:fontFamily="@font/coookie1"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_dialog_recipe_description"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:textSize="15sp"
        android:fontFamily="@font/coookie1"
        android:paddingHorizontal="10dp"
        android:id="@+id/tv_dialog_recipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_recipe_step"
         />


</androidx.constraintlayout.widget.ConstraintLayout>