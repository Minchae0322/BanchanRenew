<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dialog_recipe_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="step 1"
        android:fontFamily="sans-serif-black"
        android:textSize="17sp"
        android:padding="10dp"
        android:textColor="@color/main_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_dialog_recipe_description"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:textSize="17sp"
        android:fontFamily="sans-serif"
        android:paddingHorizontal="10dp"
        android:id="@+id/tv_dialog_recipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_recipe_step"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C5C5"
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_recipe_description"
        />


</androidx.constraintlayout.widget.ConstraintLayout>