<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_marginBottom="40dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:background="@drawable/background_rounding"
    >

   <ImageView
       android:id="@+id/imageView_selectdish"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:scaleType="centerCrop"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/tv_menuSelect">

   </ImageView>

   <TextView
       android:id="@+id/tv_menuSelect"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="20dp"
       android:background="#FCF8E8"
       android:gravity="center_vertical"
       android:fontFamily="@font/menu_title"
       app:layout_constraintTop_toBottomOf="@id/imageView_selectdish"
       android:textColor="@color/black"
       android:textSize="25sp" />


</androidx.constraintlayout.widget.ConstraintLayout>